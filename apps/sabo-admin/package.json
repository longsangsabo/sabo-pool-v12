{
  "name": "@sabo/admin-app",
  "version": "1.0.0",
  "description": "SABO Arena Admin Application - Secure administrative interface",
  "type": "module",
  "scripts": {
    "dev": "vite --port 8081 --host",
    "build": "tsc && vite build",
    "preview": "vite preview --port 8081",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "clean": "rm -rf dist .vite"
  },
  "dependencies": {
    "@sabo/shared-types": "workspace:*",
    "@sabo/shared-utils": "workspace:*",
    "@sabo/shared-ui": "workspace:*",
    "@sabo/shared-auth": "workspace:*",
    "recharts": "^3.1.0"
  },
  "devDependencies": {
    "vite": "^5.4.19"
  },
  "private": true
}
