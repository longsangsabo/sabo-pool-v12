{
  "name": "@sabo/monorepo-root",
  "private": true,
  "version": "1.0.0",
  "description": "SABO Arena - Optimized monorepo with admin/user app separation",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:admin": "pnpm --filter @sabo/admin-app dev",
    "dev:user": "pnpm --filter @sabo/user-app dev",
    "dev:packages": "pnpm --filter \"./packages/*\" dev",
    "build": "pnpm run --recursive build",
    "build:admin": "pnpm --filter @sabo/admin-app build",
    "build:user": "pnpm --filter @sabo/user-app build",
    "build:packages": "pnpm --filter \"./packages/*\" build",
    "type-check": "pnpm run --recursive type-check",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "test": "pnpm run --recursive test",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "clean:deps": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "install:all": "pnpm install",
    "install:admin": "pnpm --filter @sabo/admin-app install",
    "install:user": "pnpm --filter @sabo/user-app install"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "@supabase/supabase-js": "^2.54.0",
    "@tanstack/react-query": "^5.56.2",
    "lucide-react": "0.539.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2",
    "date-fns": "^3.6.0",
    "sonner": "^1.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.8.3",
    "vite": "^5.4.19"
  },
  "packageManager": "pnpm@8.15.0"
}
